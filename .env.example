# ============================================================================
# Edutime Environment Variables Template
# ============================================================================
# Copy this file to create environment-specific configurations:
# - .env.example (local development - gitignored)
# - .env.example.development (dev server)
# - .env.example.staging (staging server)
# - .env.example.production (production server)
# ============================================================================

# ============================================================================
# ENVIRONMENT
# ============================================================================
APP_ENV=development
APP_NAME=Edutime
APP_VERSION=1.0.0

# ============================================================================
# SUPABASE
# ============================================================================
SUPABASE_URL=
SUPABASE_ANON_KEY=

# ============================================================================
# VERCEL API
# ============================================================================
API_BASE_URL=
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# ============================================================================
# FIREBASE
# ============================================================================
FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=
FIREBASE_APP_ID=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_STORAGE_BUCKET=

# ============================================================================
# FEATURES
# ============================================================================
FEATURE_OFFLINE_MODE=true
FEATURE_REALTIME_UPDATES=true
FEATURE_DARK_MODE=true
FEATURE_COMBINED_LECTURES=true
FEATURE_RECURRING_LECTURES=true
ENABLE_PUSH_NOTIFICATIONS=true

# ============================================================================
# DEBUG & LOGGING
# ============================================================================
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_PRETTY_LOGS=true
LOG_API_REQUESTS=false

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
ENABLE_ANALYTICS=false
ENABLE_CRASHLYTICS=false

# ============================================================================
# CACHE
# ============================================================================
CACHE_EXPIRATION_HOURS=24
MAX_CACHE_SIZE_MB=50

# ============================================================================
# SECURITY
# ============================================================================
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=60